---
import DarkModeSwitch from "../components/DarkModeSwitch.astro";
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="preload"
      href="/Chae4ek/fonts/Blrrpix.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/Chae4ek/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/Chae4ek/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/Chae4ek/favicon-16x16.png"
    />
    <link rel="manifest" href="/Chae4ek/manifest.json" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <DarkModeSwitch />
    <main>
      <slot />
    </main>
    <script is:inline>
    const isDarkMode = localStorage.getItem("darkMode");
    if (
      (isDarkMode === null &&
        window.matchMedia("(prefers-color-scheme: dark)").matches) ||
      isDarkMode === "true"
    ) {
      document.documentElement.className = "dark";
    }
    </script>
  </body>
</html>

<style is:global lang="scss">
  :root {
    --main_bg_color: #c7f2ff;
    --primary_font_color: #262626;
    --date_font_color: #6091db;
    --selection_color: #262626;

    --card_shadow_color: #2e3f6c21;
    --card_shadow_color_hover: #2e3f6c3b;
    --card_bg_color: #fff;
    --card_bg_color_a: #ffffff00;
    --card_opacity: 0.02;
    --card_active_opacity: 0.03;

    --tag_bg_color: #76c1ff;
  }
  .dark {
    --main_bg_color: #1e1e1e;
    --primary_font_color: #fff;
    --date_font_color: #264e73;
    --selection_color: #fff;

    --card_shadow_color: #00000033;
    --card_shadow_color_hover: #00000080;
    --card_bg_color: #2e2e2e;
    --card_bg_color_a: #2e2e2e00;
    --card_opacity: 0.1;
    --card_active_opacity: 0.15;

    --tag_bg_color: #3e2cdf;
  }

  :root {
    --main_font_family: Quicksand, sans-serif;
    --tag_font_family: Blrrpix, sans-serif;

    background-color: var(--main_bg_color);
  }
  * {
    margin: 0;
    padding: 0;
  }
  html,
  body {
    font-size: 62.5%;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  main {
    flex: 1 0 auto;
    text-align: center;
    padding-bottom: 14.8rem;
    position: relative;
    float: right;
  }
  img {
    font-size: 0;
  }
  a {
    text-decoration: none;
    color: var(--main_tertiary_link_color);
    &:hover {
      text-decoration: underline;
    }
    &:active {
      color: var(--main_secondary_link_color);
    }
    &:link {
      color: var(--main_primary_link_color);
    }
  }
  li {
    list-style-type: none;
  }

  /* Typography */

  .font-date {
    font-family: var(--tag_font_family);
    font-style: normal;
    font-weight: normal;
    font-size: 2rem;
    line-height: 3.2rem;
    letter-spacing: 0.2rem;
    color: var(--date_font_color);
  }
  .font-date-dot {
    font-size: 1.2rem;
    line-height: 1.2rem;
  }
  .font-tag {
    font-family: var(--tag_font_family);
    font-style: normal;
    font-weight: normal;
    font-size: 1.6rem;
    line-height: 1.8rem;
    letter-spacing: 0.048rem;
    color: #262626;
  }

  h1 {
    font-family: var(--main_font_family);
    font-style: normal;
    font-weight: bold;
    font-size: 4.8rem;
    line-height: 6rem;
    letter-spacing: 0.048rem;
    color: var(--primary_font_color);
  }
  h2 {
    font-family: var(--main_font_family);
    font-style: normal;
    font-weight: 600;
    font-size: 2.4rem;
    line-height: 4rem;
    letter-spacing: 0.024rem;
    color: var(--primary_font_color);
  }
  p,
  a,
  li {
    font-family: var(--main_font_family);
    font-style: normal;
    font-weight: normal;
    font-size: 1.6rem;
    line-height: 2rem;
    letter-spacing: 0.016rem;
    color: var(--primary_font_color);
  }

  /* Layout */

  ::selection {
    color: var(--selection_color);
    background-color: #2391eb80;
  }
  .non-selectable {
    cursor: default;
    user-select: none;
  }
  .row {
    display: flex;
    flex-direction: row;
    text-align: left;
  }
  .col {
    display: flex;
    flex-direction: column;
    text-align: left;
  }
</style>
